@{
    ViewBag.Title = "Audrey Chigarira Movie Application";
}

@model MovieApp.Models.ApplicationResponse

<form asp-action="AddMovie" method="post">

    <div>
        <label asp-for="Category"> What is the Movie Category? </label>

        <select asp-for="Category">
            <option value="">Select One</option>
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
        </select>
    </div>

    <br />
    <br />

    <div>
        <label asp-for="Title"> Title: </label>
        <input asp-for="Title" />
    </div>

    <br />
    <br />

    <div>
        <label asp-for="Year"> Year: </label>
        <input asp-for="Year" />
    </div>

    <br />
    <br />

    <div>
        <label asp-for="Director"> Director: </label>
        <input asp-for="Director" />
    </div>

    <br />
    <br />

    <div>
        <label asp-for="Rating"> What is the movie rating?: </label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="PG">PG</option>
            <option value="UR">UR</option>
            <option value="G">G</option>
            <option value="NR">NR</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-Y7">TV-Y7</option>
        </select>
    </div>

    <br />

    <button type="submit">Add Movie!</button>
</form>






