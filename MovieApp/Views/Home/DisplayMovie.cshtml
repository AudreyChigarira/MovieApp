@{
    ViewBag.Title = "DisplayMovie";
}

@model IEnumerable<MovieApp.Models.ApplicationResponse>
   
<div>
    <h2> Here are the movies added to your list!</h2>

    <table>
        <thead>
            <tr>

                <th>Category</th>
            
                <th>Title</th>
                
                <th>Year</th>
                
                <th>Director</th>
                
                <th>Rating</th>
            </tr>
        </thead>


        <tbody>
        
            @foreach(MovieApp.Models.ApplicationResponse x in Model.Where(n => n.Title != "Independence Day"))
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>

                </tr>
            }
        </tbody>
    </table>

   


    </table>
</div>

